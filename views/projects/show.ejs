<h1><%= project.name %></h1>

<a class="btn btn-primary" href="<%= project.githubLink %>" target="_blank">
  <i class="fa fa-github" aria-hidden="true"></i>
  Github Link
</a>

<a class="btn btn-primary" href="<%= project.deployLink %>" target="_blank">
  <i class="fa fa-globe" aria-hidden="true"></i>
  Deployed Link
</a>

<p><%= project.description %></p>

<hr />
<h2>Categories:</h2>
<% project.categories.forEach((cat) => { %>
  <a href="/categories/<%= cat.id %>"><%= cat.name %></a>
<% }) %>
<hr />
<h2>Add a category:</h2>
<% otherCategories.forEach((cat) => { %>
  <form action="/projects/<%= project.id %>?_method=put" method="POST">
    <input type="hidden" name="categoryId" value="<%= cat.id %>">
    <input type="submit" value="<%= cat.name %>">
  </form>
<% }) %> 
<hr />

<a href="/">&larr; Back Home</a>
